#content-holder {
    height: 50%;
    background-color: rgba(68, 70, 70, 0.67);
}

#close-region {
    background-color: rgba(163, 210, 136, 0.14);
}

#content-holder #unity-tab__header {
    background-color: rgba(0, 0, 0, 0);
    width: 145px;
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-left-color: rgb(76, 84, 91);
    border-right-color: rgb(76, 84, 91);
    border-top-color: rgb(76, 84, 91);
    border-bottom-color: rgb(76, 84, 91);
    border-radius: 4px;
    align-self: center;
    height: 70%;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 0 1px;
    margin: 0 5px;
}

#content-holder > .unity-tab-view__content-viewport {
    background-color: rgba(60, 70, 78, 0.67);
    height: 60px;
    align-self: center;
    width: 100%;
    align-items: center;
    flex-shrink: 0;
}

#content-holder VisualElement {
    color: rgb(204, 195, 40);
}

#content-holder .unity-tab-view__header-container {
    height: 100%;
    justify-content: center;
    align-items: center;
}

#unity-tab-view__content-container {
    flex-grow: 1;
}

#unity-tab__content-container {
    flex-grow: 1;
}

.unity-tab {
    flex-grow: 1;
}

.unity-tab__header > .unity-tab__header-label {
    font-size: 18px;
    position: relative;
}

.unity-tab__header > .unity-tab__header-underline {
    background-color: rgba(204, 195, 40, 0.25);
    position: relative;
    width: 15%;
    border-radius: 1px;
    transition-property: width;
    transition-duration: 0.1s;
}

.unity-tab__header:checked > .unity-tab__header-underline {
    background-color: rgb(204, 195, 40);
    width: 95%;
}

.module-ui-container {
    flex-grow: 1;
}
